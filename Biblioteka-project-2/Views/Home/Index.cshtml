@{
    ViewData["Title"] = "Home Page";
}
<br />
<div class="text-center">
    <h1 class="display-4">Witamy w naszej bibliotece!</h1>
</div>
<br />

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="carousel-inner" src="images/projekt4.jpg" alt="First slide" height="600px">
        </div>
        <div class="carousel-item">
            <img class="carousel-inner" src="images/projekt5.jpg" alt="Second slide" height="600px">
        </div>
        <div class="carousel-item">
            <img class="carousel-inner" src="images/projekt6.jpg" alt="Third slide" height="600px">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="card mb-3">
    <div>
    <h3 class="card-header">Our page is also avalible in other languages!</h3>
    <div class="card-body">
        <h5 class="card-title" align="center">Click flag icon to change language:</h5>
           <div align="center">
            <button>
                <img src="~/images/english.png" height="60px" width="120px" />
                @Html.ActionLink("English","Index","Language", new{language = "en"}, null)
            </button>
            <button>
                <img src="~/images/polish.png" height="60px" width="120px" />
            </button>
            <button>
                <img src="~/images/german.png" height="60px" width="120px"/>
            </button>
            </div>
    </div>
    </div>
    <div class="card-body">
        <h3 class="card-text">Niektóre z naszych nowych książek, już dostępnych do wypożyczenia:</h3>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Krzyżacy</li>
        <li class="list-group-item">Lalka</li>
        <li class="list-group-item">Ogniem i mieczem</li>
    </ul>
    <div class="card-body">
        <a href="book" class="card-link">Sprawdź listę naszych książek!</a>
        <a href="/Home/Contact" class="card-link">Zaproponuj książkę do dodania!</a>
    </div>

</div>


